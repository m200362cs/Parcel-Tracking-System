<p id="notice"><%= notice %></p>

<h1>Consignments</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Destination pin</th>
      <th>Source pin</th>
      <th>Status</th>
      <th>Weight</th>
      <th>Tracking</th>
      <th>Source contact</th>
      <th>Destination contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @consignments.each do |consignment| %>
      <tr>
        <td><%= consignment.user_id %></td>
        <td><%= consignment.destination_pin %></td>
        <td><%= consignment.source_pin %></td>
        <td><%= consignment.status %></td>
        <td><%= consignment.weight %></td>
        <td><%= consignment.tracking_id %></td>
        <td><%= consignment.source_contact %></td>
        <td><%= consignment.destination_contact %></td>
        <td><%= link_to 'Show', consignment %></td>
        <td><%= link_to 'Edit', edit_consignment_path(consignment) %></td>
        <td><%= link_to 'Destroy', consignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

